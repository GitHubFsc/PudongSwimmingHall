.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.nav {
  height: 0;
}
.bgimg{
  width: 100%;
  height: 412rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.body{
  width: 100%;
  height: auto;
  padding-top: 170rpx;
  position: absolute;
  top: 412rpx;
  left: 0;
  background-color: #fff;
  border-radius:20rpx;
  text-align: center;
  font-size: 38rpx;
}
.body .logo{
  width: 222rpx;
  height: 222rpx;
  position: absolute;
  left: 265rpx;
  top: -120rpx;
  z-index: 3;
}
.body .bglogo{
  width: 345rpx;
  height: 345rpx;
  position: absolute;
  left: 204rpx;
  top: -180rpx;
  z-index: 2;
}
.body .body_input{
  width: 550rpx;
  height: 150rpx;
  margin: 0 auto;
  text-align: left;
  border-bottom: 1rpx solid #CECECE;
}
.body .body_input .label{
  width: 550rpx;
  height: 70rpx;
  padding-left: 10rpx;
  line-height: 70rpx;
  font-size:34rpx;
  font-weight:400;
}
.body .body_input .input{
  width: 550rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size:28rpx;
  font-weight:400;
}
.body_btn{
  width:620rpx;
  height:90rpx;
  margin: 150rpx auto 0;
  border-radius:45rpx;
  text-align: center;
  line-height: 90rpx;
  font-size:36rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.body_btnH{
