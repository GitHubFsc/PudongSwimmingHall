/**app.wxss**/
page{
  width: 100%;
  height: 100%;
  margin: 0 ;
  padding: 0 ;
}
button{
  margin: 0 !important;
  padding: 0 !important;
  background-color: #fff !important;
}
input,textarea,picker,image{
  width: 100%;
  height: 100%
}

.hr{
  width: 100%;
  height: 20rpx;
}

/*提示框*/
.prompt_box{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.promptBox{
  width:530rpx;
  height:auto;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 29rpx 0px rgba(37,37,37,0.11);
  border-radius:10rpx;
  padding: 30rpx 0 0 0;
  position: absolute;
  top: 480rpx;
  left: 118rpx;
  z-index: 10;
}
.promptBox .title{
  width: 100%;
  height: 90rpx;
  font-size:38rpx;
  font-weight:400;
  color:rgba(17,17,17,1);
  text-align: center;
  line-height:90rpx;
}
.promptBox .txt{
  width:100%;
  height:80rpx;
  font-size:34rpx;
  color:rgba(114,114,114,1);
  text-align: center;
  margin-bottom: 30rpx;
}
.promptBox .pb_btn{
  width: 100%;
  height: 92rpx;
  border-top: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
}
.promptBox .cancel{
  width: 264rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #B3B4B4;
  font-size:36rpx !important;
  font-weight:400 !important;
  border-right: 1rpx solid #f4f4f4;
  border-radius: 0 0 0 10rpx !important;
}
.promptBox .confirm{
  width: 264rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #4EA4FB;
  font-size:36rpx !important;
  font-weight:400 !important;
  border-radius: 0 0 10rpx 0 !important;
}

